<div class="container">
  <div class="row">
    <% @boards.each do |board| %>
    <div class="col-sm-12 col-lg-4 mb-5 mx-auto">
      <div id="board-id-<%= board.id %>">
        <div class="card">
          <%= image_tag url_for(board.board_image_url), class: "card-img-top", style: "width:100%; height:400px; object-fit: cover;" %>
          <div class="card-body">
            <div class="d-flex">
              <h4 class="card-title">
                <%= link_to board.title, board_path(board) %>
              </h4>
            </div>
            <ul class="list-inline">
              <li>
                <%= image_tag url_for(board.user.avatar.url), class: "rounded-circle", style: "width:30px; height:30px; object-fit:cover;" %> 
                <%= board.user.nickname %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
  
