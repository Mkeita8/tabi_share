<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto" style="width: 23rem;">
      <h1 class="prompt-thin">SIGN UP</h1>

      <div class="card-body">
        <%= form_with model: @user, data: {turbo: false} do |f| %>
          <div class="mb-3 mt-4">
            <%= f.text_field :full_name, class: "form-control", placeholder: "お名前" %>
          </div>

          <div class="mb-3 mt-4">
            <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム" %>
          </div>

          <div class="mb-3 mt-4">
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
          </div>
          
          <%= f.submit "Sign up", class: "prompt-thin-2 btn btn-dark w-100" %>
        <% end %>

        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
      <div class="card-text">
        既にアカウントを持っている？
        <%= link_to "Login", login_path, class: "prompt-thin-4 text-secondary" %>
      </div>
    </div>
  </div>
</div>
