<div class="col-sm-10 col-lg-4 mb-5 mx-auto">
  <div id="board-id-<%= board.id %>">
    <div class="card card-shadow">
      <%= link_to board_path(board) do %>
        <%= image_tag board.board_image_url, class: "card-img-top", style: "width:100%; height:400px; object-fit: cover;" %>
      <% end %>
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to board.title, board_path(board), class: "dela-gothic-one-regular-3 text-decoration-none" %>
          </h4>
            <%= render "bookmark_buttons", { board: board } %>
            <div class="line-it-button" data-lang="ja" data-type="share-b" data-env="REAL" data-url="<%= request.protocol + request.host_with_port + board_path(board) %>" data-color="grey" data-size="small" data-count="false" data-ver="3" style="display: none;"></div>
            <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
        </div>
        <ul class="list-inline">
          <li>
            <%= image_tag board.user.avatar.url, class: "rounded-circle", style: "width:30px; height:30px; object-fit:cover;" %> 
            <%= board.user.nickname %>
          </li>
        </ul>
        <%= render_with_hashtags(board.body) %>
      </div>
    </div>
  </div>
</div>
