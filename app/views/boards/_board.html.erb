<div class="col-sm-10 col-lg-4 mb-5 mx-auto">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <%= image_tag board.board_image_url, class: "card-img-top w-100 h-100 object-fit-cover" %>
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to board.title, board_path(board) %>
          </h4>
          <%= render 'bookmark_buttons', { board: board } %>
          <div class="line-it-button" data-lang="ja" data-type="share-b" data-env="REAL" data-url="https://developers.line.biz/ja/docs/line-social-plugins/install-guide/using-line-share-buttons/" data-color="default" data-size="small" data-count="false" data-ver="3" style="display: none;"></div>
          <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script> 
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= board.user.full_name %></li>
          <li><i class="bi bi-calendar"></i><%= l board.created_at, format: :short %></li>
        </ul>
        <%= render_with_hashtags(board.body) %>
      </div>
    </div>
  </div>
</div>