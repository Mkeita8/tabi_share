<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <h2>ハッシュタグ: #<%= @tag&.hashname %></h2>
      <div class="row">
        <% @boards.each do |board| %>
          <li>
            <%= link_to board_path(board.id) do %>
              <%= image_tag board.board_image_url, class: "card-img-top w-100 h-100 object-fit-cover" %>
            <% end %>
          </li>
        <% end %>
      </div>
    </div>
  </div>
</div>
