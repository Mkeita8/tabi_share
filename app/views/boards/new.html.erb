<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>新規投稿</h1>
      <%= form_with model: @board, class: "new_board", data: {turbo: false} do |f| %>
        <div class="mb-3">
          <%= f.label :地名・建物名 %>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :公式リンク %>
          <%= f.text_field :body, class: "form-control", rows: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :ハッシュタグ %>
          <%= f.text_area :body, class: "form-control", rows: "3" %>
        </div>
        <div class="mb-3">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :写真 %>
          <%= f.file_field :board_image, class: "form-control", accept: 'image/*' %>
          <%= f.hidden_field :board_image_cache %>
        </div>
        <%= f.submit "投稿", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>