<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto" style="width: 23rem;">
      <h1>Profiles edit</h1>
      
      <div class="card-body">
        <%= form_with model: @user, url: profile_path, method: :put do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <div class="mb-3 mt-4">
            <%= f.label :お名前 %>
            <%= f.text_field :full_name, class: "form-control "%>
          </div>

          <div class="mb-3 mt-4">
            <%= f.label :ニックネーム %>
            <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム" %>
          </div>

          <div class="mb-3 mt-4">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <div class="mb-3 mt-4">
            <%= f.label :プロフィール写真 %>
            <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*', placeholder: "アバター" %>
            <%= f.hidden_field :avatar_cache %>
            <div class='mt-3 mb-3'>
             <%= image_tag @user.avatar.url,
                           class: 'rounded-circle',
                           id: 'preview',
                           size: '80x80' %>
            </div>
          </div>

          <%= f.submit "更新", class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>