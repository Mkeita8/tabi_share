<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">My profile</h1>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:full_name) %></th>
          <td><%= current_user.full_name %></td>
        </tr>
        <tr>
        <th scope="row"><%= User.human_attribute_name(:nickname) %></th>
        <td><%= current_user.nickname %></td>
      </tr>
        <tr>
        <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
      </table>
      <%= button_to "Delete", user_path(current_user.id), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger destroy-user" %>
    </div>
  </div>
</div>
